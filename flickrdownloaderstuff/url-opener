#!/usr/bin/env python3
import socket, sys

SOCK_PATH = "/tmp/open-url.sock"

if len(sys.argv) < 2:
    print("Usage: url-opener <url>", file=sys.stderr)
    sys.exit(1)

url = sys.argv[1]

try:
    s = socket.socket(socket.AF_UNIX, socket.SOCK_STREAM)
    s.connect(SOCK_PATH)
    s.sendall(url.encode() + b"\n")
    reply = s.recv(64).decode().strip()
    if reply == "OK":
        sys.exit(0)
    else:
        print(f"url-opener: unexpected reply: {reply}", file=sys.stderr)
        sys.exit(1)
except FileNotFoundError:
    print(f"url-opener: socket not found: {SOCK_PATH}", file=sys.stderr)
    print("Is the host-side dsocket listener running?", file=sys.stderr)
    sys.exit(1)
except ConnectionRefusedError:
    print(f"url-opener: connection refused: {SOCK_PATH}", file=sys.stderr)
    sys.exit(1)
